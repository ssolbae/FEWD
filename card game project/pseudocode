var firstCard = null;
var secondCard = null;

function flip(event) {
	var curCard = e.target; (target tells u which element triggered the event)
	if (firstCard == null) {
		firstCard = curCard;
	} else {
		secondCard = curCard;
		if (firstCard.getAttribute("data-name") == secondCard.getAttribute("data-name")) {
			--> match!
		} else {
			--> don't match!
		}
	}
}



